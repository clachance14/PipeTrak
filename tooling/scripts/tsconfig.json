{
	"extends": "../../tooling/typescript/base.json",
	"compilerOptions": {
		"jsx": "react-jsx",
		"noUnusedLocals": false,
		"noUnusedParameters": false,
		"lib": ["ES2021", "DOM"],
		"target": "ES2022",
		"moduleResolution": "bundler",
		"module": "ES2022",
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"skipLibCheck": true
	},
	"include": ["**/*.ts", "**/*.tsx"],
	"exclude": ["dist", "build", "node_modules"]
}
