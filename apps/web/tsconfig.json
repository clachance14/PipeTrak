{
  "extends": "tsconfig/nextjs.json",
  "compilerOptions": {
    "plugins": [{ "name": "next" }],
    "baseUrl": ".",
    "paths": {
      "@config": ["./config"],
      "@i18n": ["./i18n"],
      "@marketing/*": ["./modules/marketing/*"],
      "@saas/*": ["./modules/saas/*"],
      "@ui/*": ["./modules/ui/*"],
      "@shared/*": ["./modules/shared/*"],
      "contentlayer/generated": ["./.contentlayer/generated"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.cjs",
    "**/*.mjs",
    ".next/types/**/*.ts",
    ".contentlayer/generated"
  ],
  "exclude": ["node_modules"]
}
